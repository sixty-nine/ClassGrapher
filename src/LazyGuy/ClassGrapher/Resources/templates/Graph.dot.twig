digraph G {

    fontname = "{{baseFont}}"
    fontsize = 8
    layout = dot
    concentrate=true
    ranksep = 0.1

    node [
        fontname = "{{classFont}}"
        fontsize = 8
        shape = "box"
    ]

    edge [
        dir = "back"
        arrowtail = "empty"
    ]

{% for id, node in nodes %}
{% if node.interface %}
    {{id}} [ label = <{{node.label}}>, fontname="{{interfaceFont}}" ]
{% else %}
    {{id}} [ label = <{{node.label}}> ]
{% endif %}
{% endfor %}

{% if useedges %}
{% for edge in edges %}
    {{edge[0]}} -> {{edge[1]}}
{% endfor %}
{% endif %}

{% if usegroups %}
{% for id,group in groups %}
    subgraph {{id}} {
        label = "{{group.name}}"
{% for node in group.nodes %}
        {{node}}
{% endfor %}
    }
{% endfor %}
{% endif %}

}
